# Configuration de la base de données PostgreSQL
# Format: postgres://username:password@host:port/database?sslmode=require
DATABASE_URL=postgres://user:password@host:5432/database?sslmode=require

# Secret pour la génération des tokens JWT
# Générer avec: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production

# Environnement (development, production, test)
NODE_ENV=development

# Port du serveur
PORT=3000

# CORS - Origines autorisées (séparées par des virgules)
# Exemple: http://localhost:5173,https://yourdomain.com
CORS_ORIGIN=http://localhost:5173

# Vercel (automatiquement défini par Vercel)
# VERCEL=1
